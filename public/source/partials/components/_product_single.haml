.innercontainer

  %header.entry-header
    %h2 The Creative Act: George Benetton Lois Men's T-shirt (limited)

  .product-meta
    %span.sku 
      SKU:
      %span 1987
    %span.product-cat
      More From:
      %a(href="#") creative,
      %a(href="#") t-shirt


  .summary

    %p.facebook-share-like
      %a(class="addthis_button_facebook_like" fb:like:layout="standard" fb:like:send="true")

    .entry-content
      :markdown
