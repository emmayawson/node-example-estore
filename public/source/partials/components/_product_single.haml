      %p.stock In stock - 500 available (backorders allowed)

    .product-price
      %table.variations
        %tbody

          %tr
            %td
              %label T-shirt size
            %td
              %select(name="attribute_size")
                %option Choose an option
                %option Medium
                %option Small
                %option Large

          %tr
            %td
              %label Color
            %td
              %select(name="attribute_color")
                %option Choose an option
                %option Red
                %option Green
                %option Blue

      .single-variation-wrap
        .single-variation
          .price $271.5
        .variations-button
          .quantity
            %input#minus1.minus{:type => "button", :value => "-"}
            %input.input-text.qty.text{"data-max" => "0", "data-min" => "", :maxlength => "12", :size => "4", :title => "Qty", :value => 2}
            %input#add1.plus{:type => "button", :value => "+"}/
          %button.btn(type="submit") Add to cart


